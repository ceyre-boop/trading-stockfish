{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://trading-stockfish/schemas/audits_storage.schema.json",
  "title": "Feature Audits Storage (Parquet)",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "run_id",
    "audit_id",
    "timestamp_utc",
    "feature_name",
    "policy_version",
    "engine_version"
  ],
  "properties": {
    "run_id": { "type": "string" },
    "audit_id": { "type": "string" },
    "timestamp_utc": { "type": "string", "format": "date-time" },
    "feature_name": { "type": "string" },
    "raw_value": { "type": ["number", "string", "null"] },
    "normalized_value": { "type": ["number", "string", "null"] },
    "session_regime": { "type": ["string", "null"] },
    "macro_regimes": {
      "type": "array",
      "items": { "type": "string" }
    },
    "issues": {
      "type": "array",
      "items": { "type": "string" }
    },
    "policy_version": { "type": "string" },
    "engine_version": { "type": "string" },
    "metadata": {
      "type": "object",
      "additionalProperties": { "type": ["string", "number", "null"] }
    }
  }
}
