{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://trading-stockfish/schemas/feature_spec.schema.json",
  "title": "Feature Spec",
  "description": "Canonical feature specification schema v1.0.0 (deterministic ordering of feature keys recommended).",
  "type": "object",
  "additionalProperties": false,
  "required": ["version", "features"],
  "properties": {
    "version": {"type": "string", "const": "1.0.0"},
    "registry_version": {"type": "string"},
    "run_id": {"type": "string"},
    "timestamp_utc": {"type": "string", "format": "date-time"},
    "features": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": false,
      "patternProperties": {
        "^.+$": {
          "type": "object",
          "additionalProperties": false,
          "required": ["source", "path", "dtype", "role", "tags", "live"],
          "properties": {
            "name": {"type": "string"},
            "description": {"type": "string"},
            "source": {"type": "string"},
            "path": {"type": "string"},
            "dtype": {
              "type": "string",
              "enum": ["float", "int", "string", "bool", "category", "array", "object"]
            },
            "role": {
              "type": "array",
              "items": {"type": "string"},
              "minItems": 1
            },
            "tags": {
              "type": "array",
              "items": {"type": "string"},
              "minItems": 1
            },
            "required": {"type": "boolean"},
            "live": {"type": "boolean"},
            "default": {},
            "constraints": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "allowed_values": {"type": "array", "items": {}},
                "range": {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "min": {"type": "number"},
                    "max": {"type": "number"}
                  }
                },
                "regex": {"type": "string"},
                "dtype_strict": {"type": "boolean"}
              }
            },
            "encodings": {"type": "object"},
            "transform": {
              "type": "array",
              "items": {"type": "string"}
            },
            "dependencies": {
              "type": "array",
              "items": {"type": "string"}
            },
            "null_ok": {"type": "boolean"},
            "sensitivity": {"type": "string"},
            "provenance": {"type": "object"},
            "session_modifiers": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "volatility_scale": {"type": "number"},
                "liquidity_scale": {"type": "number"},
                "trade_freq_scale": {"type": "number"},
                "risk_scale": {"type": "number"}
              }
            },
            "version": {"type": "string"}
          }
        }
      },
      "examples": [
        {
          "macro_pressure": {
            "source": "news",
            "path": "news.macro.pressure",
            "dtype": "float",
            "role": ["eval", "ml"],
            "tags": ["macro", "risk"],
            "live": true,
            "constraints": {"range": {"min": -5, "max": 5}}
          }
        }
      ]
    }
  },
  "examples": [
    {
      "version": "1.0.0",
      "registry_version": "2026.02",
      "features": {
        "macro_pressure": {
          "source": "news",
          "path": "news.macro.pressure",
          "dtype": "float",
          "role": ["eval", "ml"],
          "tags": ["macro", "risk"],
          "live": true,
          "constraints": {"range": {"min": -5, "max": 5}},
          "session_modifiers": {"risk_scale": 1.0, "liquidity_scale": 1.0}
        }
      }
    }
  ]
}
